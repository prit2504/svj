<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title><%= product.title %> | Shree Vaghshwari Jewellers</title>
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lora:wght@400;500&display=swap" rel="stylesheet" />
<style>
  body { font-family: 'Lora', serif; }
  h1, h2, h3, h4, h5, h6 { font-family: 'Playfair Display', serif; }
</style>
</head>
<body class="bg-gray-50 text-gray-800">

<!-- Navbar -->
<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <a href="/"><img src="/images/logo.png" alt="Logo" class="h-10 w-10 object-contain"/></a>
    </div>
    <div class="text-xl md:text-2xl font-bold text-yellow-700 text-center">
      Shree Vaghshwari Jewellers
    </div>
    <div></div>
  </div>
</nav>

<!-- Breadcrumb -->
<div class="max-w-7xl mx-auto px-4 py-4 text-gray-600 text-sm">
  <a href="/" class="hover:underline">Home</a> &gt; 
  <span><%= product.category %></span> &gt; 
  <span class="font-semibold text-gray-800"><%= product.title %></span>
</div>

<!-- Loader -->
<div id="loader" class="flex justify-center py-6">
  <div class="w-12 h-12 border-4 border-yellow-600 border-dashed rounded-full animate-spin"></div>
</div>

<!-- Product Detail -->
<section id="product-detail" class="max-w-7xl mx-auto px-4 py-6 flex flex-col md:flex-row gap-8 hidden">
  <!-- Image -->
  <div class="flex-1 flex justify-center items-center">
    <img id="product-image" src="<%= product.imageUrl %>" alt="<%= product.title %>" 
         class="w-full max-w-md rounded-xl shadow-lg object-cover"/>
  </div>

  <!-- Details -->
  <div class="flex-1 flex flex-col justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= product.title %></h1>
      <p class="text-gray-600 mb-4"><%= product.category %></p>
      <% if (product.description) { %>
        <p class="text-gray-700 mb-4"><%= product.description %></p>
      <% } %>

      <% if (!product.inStock) { %>
        <span class="inline-block px-3 py-1 bg-red-100 text-red-600 rounded mb-4">Out of Stock</span>
      <% } else { %>
        <span class="inline-block px-3 py-1 bg-green-100 text-green-600 rounded mb-4">In Stock</span>
      <% } %>
    </div>

    <!-- Buy Button -->
    <% if (product.inStock) { %>
      <a 
        href="<%= whatsappLink %>" 
        target="_blank" 
        class="mt-6 bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg text-center transition transform hover:scale-105"
      >
        Buy on WhatsApp
      </a>
    <% } %>
  </div>
</section>

<script>
  const loader = document.getElementById('loader');
  const productDetail = document.getElementById('product-detail');
  const productImage = document.getElementById('product-image');

  function showProduct() {
    loader.classList.add('hidden');
    productDetail.classList.remove('hidden');
  }

  // If image is already cached
  if (productImage.complete) {
    showProduct();
  } else {
    productImage.onload = showProduct;
    productImage.onerror = showProduct; // also hide loader if image fails
  }
</script>

</body>
</html>
