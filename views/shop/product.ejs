<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= product.title %> | Shree Vaghshwari Jewellers
  </title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lora:wght@400;500&display=swap"
    rel="stylesheet" />
  <style>
    body {
      font-family: 'Lora', serif;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: 'Playfair Display', serif;
    }
  </style>
</head>

<body class="bg-gray-50 text-gray-800">

  <!-- Navbar -->
  <nav class="bg-white shadow-lg sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
      <a href="/" class="flex items-center space-x-3">
        <img src="/images/logo.png" alt="Logo" class="h-12 w-12 object-contain" />
        <div class="text-2xl md:text-3xl font-bold text-[#B76E79]">Shree Vagheswari Jewellers</div>
      </a>
      <div class="space-x-4 hidden md:flex">
        <a href="/" class="text-gray-700 hover:text-[#E3C396] font-medium transition">Home</a>
        <a href="/#categories" class="text-gray-700 hover:text-[#E3C396] font-medium transition">Collections</a>
        <a href="/#footer" class="text-gray-700 hover:text-[#E3C396] font-medium transition">Contact</a>
      </div>
    </div>
  </nav>

  <!-- Breadcrumb -->
  <div class="max-w-7xl mx-auto px-4 py-4 text-gray-600 text-sm">
    <a href="/" class="hover:underline">Home</a> &gt;
    <span>
      <%= product.category %>
    </span> &gt;
    <span class="font-semibold text-gray-800">
      <%= product.title %>
    </span>
    <button type="button" onclick="window.history.back()"
      class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-lg transition">
      ← Back
    </button>
  </div>

  <!-- Loader -->
  <div id="loader" class="flex justify-center py-6">
    <div class="w-12 h-12 border-4 border-yellow-600 border-dashed rounded-full animate-spin"></div>
  </div>

  <!-- Product Detail -->
  <section id="product-detail" class="max-w-7xl mx-auto px-4 py-6 flex flex-col md:flex-row gap-8 hidden">
    <!-- Image -->
    <div class="flex-1 flex justify-center items-center">
      <img id="product-image" src="<%= product.imageUrl %>" alt="<%= product.title %>"
        class="w-full max-w-md rounded-xl shadow-lg object-cover" />
    </div>

    <!-- Details -->
    <div class="flex-1 flex flex-col justify-start">
  <div>
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
      <%= product.title %>
    </h1>

    <% 
      let baseDiscount = product.mrp && product.price 
        ? Math.round(((product.mrp - product.price) / product.mrp) * 100) 
        : 0;
      let extraDiscountedPrice = product.price 
        ? Math.round(product.price - (product.price * 0.10)) 
        : null;
      let totalDiscount = product.mrp && extraDiscountedPrice 
        ? Math.round(((product.mrp - extraDiscountedPrice) / product.mrp) * 100) 
        : 0;
    %>

    <!-- MRP -->
    <p class="text-gray-600 mb-2 line-through">
      MRP : ₹<%= product.mrp %>
    </p>

    <!-- Selling Price -->
    <p class="text-gray-800 font-semibold mb-2">
      Price : ₹<%= product.price %> 
      <span class="text-green-600">(<%= baseDiscount %>% OFF)</span>
    </p>

    <!-- Extra Discount -->
    <p class="text-yellow-600 font-medium mb-2">
      Extra 10% OFF applied
    </p>

    <!-- Final Price -->
    <p class="text-green-700 font-bold text-lg mb-4">
      Final Price : ₹<%= extraDiscountedPrice %> 
      <span class="text-green-700">(<%= totalDiscount %>% OFF from MRP)</span>
    </p>

    <!-- Description -->
    <% if (product.description) { %>
      <p class="text-gray-700 mb-4">
        <%= product.description %>
      </p>
    <% } %>

    <!-- Stock Status -->
    <% if (!product.inStock) { %>
      <span class="inline-block px-3 py-1 bg-red-100 text-red-600 rounded mb-4">Out of Stock</span>
    <% } else { %>
      <span class="inline-block px-3 py-1 bg-green-100 text-green-600 rounded mb-4">In Stock</span>
    <% } %>
  </div>

  <!-- Buy Button -->
  <% if (product.inStock) { %>
    <a href="<%= whatsappLink %>" target="_blank"
      class="mt-6 bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg text-center transition transform hover:scale-105">
      Buy on WhatsApp
    </a>
  <% } %>
</div>

  </section>

  <script>
    const loader = document.getElementById('loader');
    const productDetail = document.getElementById('product-detail');
    const productImage = document.getElementById('product-image');

    function showProduct() {
      loader.classList.add('hidden');
      productDetail.classList.remove('hidden');
    }

    // If image is already cached
    if (productImage.complete) {
      showProduct();
    } else {
      productImage.onload = showProduct;
      productImage.onerror = showProduct; // also hide loader if image fails
    }
  </script>

</body>

</html>