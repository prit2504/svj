<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard | Shree Vaghshwari Jewellers</title>
  <link href="/css/styles.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 font-sans">

  <!-- Navbar -->
  <nav class="bg-gradient-to-r from-yellow-600 to-yellow-500 shadow-md sticky top-0 z-50 text-white">
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
      <div class="text-2xl font-bold tracking-wide">Admin Dashboard</div>
      <div>
        <a href="/auth/logout" class="bg-red-500 hover:bg-red-600 transition px-4 py-2 rounded-lg font-medium shadow">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Add Product Button -->
  <section class="max-w-7xl mx-auto px-4 py-6 flex justify-end">
    <a href="/admin/products/new" class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium shadow-lg transition transform hover:scale-105">
      + Add New Product
    </a>
  </section>

  <!-- Product Grid -->
  <section class="max-w-7xl mx-auto px-4 py-6">
    <% if (products.length === 0) { %>
      <p class="text-center text-gray-500 italic">No products found.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% products.forEach(product => { %>
          <div class="bg-white rounded-2xl shadow-md hover:shadow-xl overflow-hidden flex flex-col transition transform hover:scale-105">
            <!-- Product Image -->
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="h-52 w-full object-cover">

            <!-- Card Content -->
            <div class="p-5 flex-1 flex flex-col justify-between">
              <div>
                <h3 class="font-bold text-lg text-gray-800 mb-1"><%= product.title %></h3>
                <p class="text-sm text-gray-500 mb-1"><%= product.category %></p>
                
                <!-- Price -->
                <p class="text-yellow-600 font-semibold text-base">â‚¹<%= product.price %></p>

                <!-- Stock Status -->
                <% if (!product.inStock) { %>
                  <span class="inline-block mt-2 text-xs px-3 py-1 bg-red-100 text-red-700 font-semibold rounded-full">Out of Stock</span>
                <% } else { %>
                  <span class="inline-block mt-2 text-xs px-3 py-1 bg-green-100 text-green-700 font-semibold rounded-full">In Stock</span>
                <% } %>
              </div>

              <!-- Actions -->
              <div class="mt-4 flex justify-between">
                <a href="/admin/products/<%= product._id %>/edit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-1 rounded-lg transition text-sm font-medium shadow-sm">Edit</a>
                <form action="/admin/products/<%= product._id %>?_method=DELETE" method="POST">
                  <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-1 rounded-lg transition text-sm font-medium shadow-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </section>

</body>
</html>
