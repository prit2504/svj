<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product | Admin Dashboard</title>
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-50 text-gray-800">

  <!-- Navbar -->
  <nav class="bg-white shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
      <div class="text-xl font-bold text-yellow-700">Admin Dashboard</div>
      <div>
        <a href="/auth/logout" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition">Logout</a>
      </div>
    </div>
  </nav>

  <section class="max-w-3xl mx-auto px-4 py-6 bg-white rounded-xl shadow">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Edit Product</h2>

    <% if (error) { %>
      <p class="text-red-600 mb-4"><%= error %></p>
    <% } %>

    <form action="/admin/products/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-4">
      
      <!-- Title -->
      <div>
        <label class="block font-medium text-gray-700">Title</label>
        <input type="text" name="title" value="<%= product.title %>" required class="w-full border px-3 py-2 rounded focus:ring-2 focus:ring-yellow-500">
      </div>

      <!-- Description -->
      <div>
        <label class="block font-medium text-gray-700">Description</label>
        <textarea name="description" rows="3" class="w-full border px-3 py-2 rounded focus:ring-2 focus:ring-yellow-500"><%= product.description %></textarea>
      </div>

      <!-- Category -->
      <div>
        <label class="block font-medium text-gray-700">Category</label>
        <select name="category" required class="w-full border px-3 py-2 rounded focus:ring-2 focus:ring-yellow-500">
          <% Product.schema.path('category').enumValues.forEach(cat => { %>
            <option value="<%= cat %>" <%= product.category === cat ? "selected" : "" %>><%= cat %></option>
          <% }) %>
        </select>
      </div>

      <!-- Price -->
      <div>
        <label class="block font-medium text-gray-700">Price (â‚¹)</label>
        <input type="number" name="price" value="<%= product.price %>" step="0.01" required class="w-full border px-3 py-2 rounded focus:ring-2 focus:ring-yellow-500">
      </div>

      <!-- Stock -->
      <div class="flex items-center space-x-2">
        <input type="checkbox" name="inStock" <%= product.inStock ? "checked" : "" %>>
        <label class="text-gray-700">In Stock</label>
      </div>

      <!-- Current Image -->
      <div>
        <label class="block font-medium text-gray-700 mb-1">Current Image</label>
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="w-48 h-48 object-cover rounded-lg shadow mb-2">
      </div>

      <!-- Upload New Image -->
      <div>
        <label class="block font-medium text-gray-700">Change Image (optional)</label>
        <input type="file" name="image" accept="image/*" class="w-full mt-1">
      </div>

      <!-- Submit -->
      <button type="submit" class="bg-yellow-600 hover:bg-yellow-700 text-white px-5 py-2 rounded-lg transition">Update Product</button>
    </form>
  </section>

</body>
</html>
